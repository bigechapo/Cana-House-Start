<form asp-action="form" asp-controller="Upload" method="post" enctype="multipart/form-data">
    <label>Picture:</label>
    <input type="file" name="picture" accept="image/*" required />

    <label>Description (250 characters max):</label>
    <textarea name="description" maxlength="250" required></textarea>

    <label>Date & Time:</label>
    <input type="datetime-local" name="uploadDateTime" required />

    <label>Sign Up:</label>
    <input type="text" name="signup" required />

    <button type="submit">Upload</button>
</form>
