@page
@model Cana_House_Start.Pages.SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>

        h1 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
            font-size: 36px;
        }

        .container2 {
            width: 100%;
            max-width: 500px;
            margin: auto;
            padding: 20px;
            background-color: #F5F1E3;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-family: 'Comfortaa', sans-serif;
        }

        .sign-button {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            color: #800020;
            border: 2px solid #800020;
            background-color: transparent;
            border-radius: 5px;
            transition: 0.3s;
            cursor: pointer;
        }

            .sign-button:hover {
                background-color: #800020;
                color: white;
            }

        .error-message {
            color: red;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container2">
        <h1>Sign In</h1>
        <form method="post">
            <input type="text" asp-for="Username" placeholder="Username" required />
            <input type="password" asp-for="Password" placeholder="Password" required />
            <button type="submit" class="sign-button">Sign In</button>
        </form>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="error-message">@Model.ErrorMessage</p>
        }
    </div>
</body>