<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cana_House_Start</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Cana_House_Start.styles.css" />
    <style>

        .container {
            width: 100%;
            max-width: 1800px;
            margin: auto;
            padding: 10px;
            background-color: #F5F1E3;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: visible;
        }

        body {
            background: url('/Images/Cana-Watercolor.JPG') no-repeat center center fixed;
            background-size: cover;
            color: #2C2C2C;
            font-family: 'Playfair Display', serif;
            margin: 0;
            padding: 0;
            position: relative;
        }

        .navbar-nav {
            display: flex;
            align-items: center; /* Vertically center navbar items */
            z-index: 1000; /* Higher z-index ensures it stays on top */
        }

            /* Navbar items on the left */
            .navbar-nav.left {
                display: flex;
                justify-content: flex-start;
                flex-grow: 1;
                gap: 70px;
                list-style: none;
                padding: 0;
                font-size: 28px;
                z-index: 1000; /* Higher z-index ensures it stays on top */
            }

            /* Navbar items on the right */
            .navbar-nav.right {
                display: flex;
                justify-content: flex-end;
                flex-grow: 1;
                gap: 70px;
                list-style: none;
                padding: 0;
                font-size: 28px;
                z-index: 1000; /* Higher z-index ensures it stays on top */
            }

            /* Special styling for Donate button */
            .navbar-nav .nav-item a[href*="/Donate"] {
                background-color: #800020;
                color: white !important;
                padding: 8px 12px;
                border-radius: 50px;
                text-align: center;
                font-size: 28px;
                z-index: 1000; /* Higher z-index ensures it stays on top */
            }

            /* Remove dropdown arrow */
            .navbar-nav .nav-item .dropdown-toggle::after {
                display: none !important;
            }

            /* Show dropdown menu on hover */
            .navbar-nav .nav-item.dropdown:hover .dropdown-menu {
                display: block;
                z-index: 1000; /* Higher z-index ensures it stays on top */
            }

        /* Dropdown menu smooth fade-in */
        .dropdown-menu {
            position: absolute;
            display: none;
            opacity: 0;
            transition: opacity 0.2s ease-in-out;
            background-color: #F5F1E3;
            z-index: 1000; /* Higher z-index ensures it stays on top */
        }

        .navbar-nav .nav-item.dropdown:hover .dropdown-menu {
            display: block;
            opacity: 1;
            z-index: 1000; /* Higher z-index ensures it stays on top */
        }

        /* Center the "About Us" dropdown */
        .navbar-nav.center {
            flex-grow: 0;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            z-index: 1000; /* Higher z-index ensures it stays on top */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <ul class="navbar-nav left">
                    <li class="nav-item">
                        <a class="nav-link text-dark" style="font-weight: bold;" asp-area="" asp-page="/Index">Cana House of Hospitality</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="EventsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Events
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="EventsDropdown">
                            <li><a class="dropdown-item" asp-area="" asp-page="/Calendar">Events Calendar</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/CommunityLunch">Community Lunch</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/EventA">Event A</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/EventB">Event B</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="VolunteerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Volunteer Opportunities
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="VolunteerDropdown">
                            <li><a class="dropdown-item" asp-area="" asp-page="/WorkDays">Work Days</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/FoodSignUp">Food Sign Up For Community Lunch</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/WishList">Wish List</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="infoDropdownToggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            About Us
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="infoDropdownToggle">
                            <li><a class="dropdown-item" asp-area="" asp-page="/Mission">Mission Goal</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/Founding">Founding</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/Gallery">Gallery</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/ImportantInfo">Meeting Information</a></li>
                        </ul>
                    </li>
                </ul>

                <ul class="navbar-nav right">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/SignIn">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Donate">Donate Here!</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>