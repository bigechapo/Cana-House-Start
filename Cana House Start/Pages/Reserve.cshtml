@page
@model Cana_House_Start.Pages.ReserveModel
@{
    ViewData["Title"] = "Reserve The House";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('/Images/Cana-Watercolor.JPG') no-repeat center center fixed;
            background-size: cover;
            color: #2C2C2C;
            font-family: 'Playfair Display', serif;
            margin: 0;
            padding: 0;
            position: relative;
        }



        h1, h3 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
        }

        
        .reserve-box {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .reserve-card {
            flex: 1;
            margin: 10px;
            padding: 20px;
            border: 2px solid #283F3B;
            border-radius: 8px;
            background-color: #FAFAFA; 
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .reserve-card:hover {
                background-color: #d4a5a5;
            }

            .reserve-card p {
                font-size: 16px;
                color: #333;
            }

        a {
            text-decoration: none;
            color: #800020;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1>Reserve The House</h1>
        <img src="/Images/HouseReserve.JPG" alt="ReserveCover" style="display: block; margin: auto; max-width: 60%; height: auto;">
        <div class="reserve-box">
            <div class="reserve-card">
                <h3>Reserve The House For Sponsorship</h3>
            </div>
            <div class="reserve-card">
                <h3>Reserve The House For Personal Use</h3>
            </div>
        </div>
    </div>
</body>
