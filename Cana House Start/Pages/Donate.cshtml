@page
@model Cana_House_Start.Pages.DonateModel
@{
    ViewData["Title"] = "Donate";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
        }
            

        p {
            text-align: center;
            font-size: 20px;
            color: #333;
        }

        .donate-section {
            background-color: #ffffff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            border-left: 5px solid #283F3B;
        }

        .donate-button {
            display: block;
            width: 500px;
            margin: 20px auto;
            padding: 15px;
            text-align: center;
            background-color: #A67B5B;
            color: white;
            font-size: 22px;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            height: 100px;
        }

            .donate-button:hover {
                background-color: #8B5A2B;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            border: 1px solid #283F3B;
            text-align: center;
        }

        th {
            background-color: #283F3B;
            color: white;
            font-weight: 400;
        }

        a {
            color: #800020;
            /* font-weight: bold; */
            text-decoration: underline;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1>Support Our Mission!</h1>
        <p>Your gifts are greatly appreciated, whether you choose to donate once or multiple times. Know that your generosity makes a serious impact, no gift is too small!</p>
        <div class="donate-section">
            <div class="info-section" style="display: flex; align-items: center;">
                <div style="flex: 1; margin-right: 10px;">
                    <img src="~/images/house.jpg" style="max-width: 650px; height: auto;">
                </div>
                <div style="flex: 2;">
                    <h2>Ways to Donate</h2>
                    <form>
                        @* <label for="recurring"> *@
                        @*     <input type="checkbox" id="recurring" name="recurring" value="donation"> *@
                        @*     Make this a monthly recurring gift *@
                        @* </label> *@
                    </form>
                    <button type="button" class="donate-button" onclick="selectMethod('paypal')">Paypal</button>
                    @* <button type="button" class="donate-button" onclick="selectMethod('venmo')">Venmo</button> *@
                    <button type="button" class="donate-button" onclick="selectMethod('cashapp')">Cash App</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function selectMethod(method) {
            const links = {
                paypal: "https://www.paypal.com/donate/?hosted_button_id=MZ2VZ2YJ8JA7W",
                // venmo: "https:venmo.com/?txn=pay&recipients=your-venmo-username&amount=10&note=Donation",
                cashapp: "https://cash.app/$canahouse"
            };

            if (links[method]) {
                window.location.href = links[method];
            } else {
                alert("Invalid donation method selected.");
            }
        }
    </script>
</body>

