@page
@model Cana_House_Start.Pages.CommunityLunchModel
@{
    ViewData["Title"] = "Community Lunch";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #6c85a3;
            color: #2C2C2C;
            font-family: 'Playfair Display', serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            padding: 40px;
            background-color: #F5F1E3;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h1 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
            font-size: 36px;
        }

        .event-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 40px;
            padding: 20px;
        }

        .event-left {
            width: 40%;
        }

        .event-right {
            width: 60%;
        }

        .event-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .event-details {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .event-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 18px;
            color: #800020;
            border: 2px solid #800020;
            background-color: transparent;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

            .event-button:hover {
                background-color: #800020;
                color: white;
            }

        .event-description {
            font-size: 18px;
            line-height: 1.6;
            text-align: justify;
        }

        .note {
            font-style: italic;
            font-size: 16px;
            color: #555;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Upcoming Events</h1>
        <div class="event-wrapper">
            <div class="event-left">
                <div class="event-title">Community Lunch</div>
                <div class="event-details">
                    <strong>March 15, 2025</strong><br>
                    12:00 PM - 2:00 PM<br>
                    Cana House Dining Hall
                </div>
                <a href="#" class="event-button">RSVP</a>
            </div>
            <div class="event-right">
                <p class="event-description">
                    Join us for a special Community Lunch, where neighbors and friends gather to share a meal, connect, and foster a sense of belonging.
                    Enjoy delicious food, great company, and meaningful conversations in a warm and welcoming environment.
                    Whether you’re new to the community or a long-time member, this lunch is a wonderful opportunity to make new friends and deepen connections.
                </p>
                <p class="note">
                    <em>Note: This is a free community event, open to all. Please RSVP to help us plan accordingly.</em>
                </p>
            </div>
        </div>
    </div>
</body>
