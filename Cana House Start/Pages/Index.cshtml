@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 0;
            }

        .content {
            position: relative;
            z-index: 1;
            flex-grow: 1;
        }

        .footer-container {
            background-color: #F5F1E3;

            padding: 30px;
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
            box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.2);
            position: absolute; /* Stays in place even when scrolling */
            bottom: 12.5%; /* Center vertically */
            left: 50%; /* Center horizontally */
            transform: translate(-50%, 50%); /* Offset by half its size */
            border-radius: 60px;
            max-width: 100%;
        }


            /* Keep the text styling */
            .footer-container p:first-child {
                font-size: 2.5rem;
                color: #2C2C2C;
            }

            .footer-container p:nth-child(n + 2) {
                font-size: 1.5rem;
            }

    </style>
</head>

<body>

    <div class="content">
        <!-- Your content goes here -->
    </div>

    <div class="footer-container">
        <p>Welcome to the Cana House of Hospitality!</p>
        <p>
            We provide a safe and welcoming space where
            individuals of all backgrounds can come together in fellowship.

        </p>
        <p></p>
    </div>
</body>
