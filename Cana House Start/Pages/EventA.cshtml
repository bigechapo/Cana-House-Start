@page
@model Cana_House_Start.Pages.EventAModel
@{
    ViewData["Title"] = "Event A";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('/Images/Cana-Watercolor.JPG') no-repeat center center fixed;
            background-size: cover;
            color: #2C2C2C;
            font-family: 'Playfair Display', serif;
            margin: 0;
            padding: 0;
            position: relative;
        }



        h1 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
            font-size: 36px;
        }

        .event-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 40px;
            padding: 20px;
        }

        .event-left {
            width: 40%;
        }

        .event-right {
            width: 60%;
        }

        .event-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .event-details {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .event-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 18px;
            color: #800020;
            border: 2px solid #800020;
            background-color: transparent;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

            .event-button:hover {
                background-color: #800020;
                color: white;
            }

        .event-description {
            font-size: 18px;
            line-height: 1.6;
            text-align: justify;
        }

        .note {
            font-style: italic;
            font-size: 16px;
            color: #555;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Upcoming Events</h1>
        <div class="event-wrapper">
            <div class="event-left">
                <div class="event-title">Event A</div>
                <div class="event-details">
                    <strong>January 1, 2025</strong><br>
                    12:00 PM - 10:00 PM<br>
                    Main Hall
                </div>
                <a href="#" class="event-button">RSVP</a>
            </div>
            <div class="event-right">
                <p class="event-description">
                    Ring in the new year with joy and celebration at our New Year’s Party! Join us for an evening filled with live music, delicious food, and festive activities as we count down to midnight together.
                    Enjoy a warm and welcoming atmosphere with dancing, games, and a special toast at midnight. Whether you're coming with friends, family, or on your own, this is the perfect way to celebrate new beginnings and create lasting memories.
                </p>
                <p class="note">
                    <em>Note: This is a free community event, open to all. Please RSVP to help us plan accordingly.</em>
                </p>
            </div>
        </div>
    </div>
</body>