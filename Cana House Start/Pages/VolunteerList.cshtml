@page
@model Cana_House_Start.Pages.VolunteerListModel
@{
    ViewData["Title"] = "Volunteer List";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #6c85a3;
            color: #2C2C2C;
            font-family: 'Playfair Display', serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 100%;
            margin: auto;
            padding: 20px;
            background-color: #F5F1E3;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .container2 {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            padding: 20px;
            background-color: #F5F1E3;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h1 {
            text-align: center;
            color: #800020;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #283F3B;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #800020;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Volunteer Submissions</h1>

    @if (Model.Volunteer.Count == 0)
    {
        <p>No volunteers have signed up yet.</p>
    }
    else
    {
        <div class="container2">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Submission Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var volunteer in Model.Volunteer)
                    {
                        <tr>
                            <td>@volunteer.Id</td>
                            <td>@volunteer.FirstName</td>
                            <td>@volunteer.LastName</td>
                            <td>@volunteer.PhoneNumber</td>
                            <td>@volunteer.Email</td>
                            <td>@volunteer.SubmissionDate.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
        <form method="post">
            <button type="submit" asp-page-handler="DeleteAll" class="event-button" onclick="return confirm('Are you sure you want to delete all events? This action cannot be undone.');">
                Delete All Volunteers
            </button>
        </form>
</div>
       </body>