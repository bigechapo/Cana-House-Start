@page
@model Cana_House_Start.Pages.FoodSignUpModel
@{
	ViewData["Title"] = "Food Sign Up";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>


        h1 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
        }

        p {
            text-align: center;
            font-size: 18px;
            color: #333;
        }


        .info-section {
            background-color: #ffffff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            border-left: 5px solid #283F3B;
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Food Sign Up</h1>
        <div class="info-section">
            <p>If you plan on bringing food to any upcoming event, please enter the event name and what you are bringing in our Volunteer Form!</p>
        </div>
    </div>
</body>
