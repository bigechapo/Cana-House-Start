@page
@model Cana_House_Start.Pages.EventsModel
@{
	ViewData["Title"] = "Events Page";
}

<div class="text-black" style="text-align: center;">
    <h1 style="text-decoration: underline;">Events</h1>
    <p></p>
</div>

<div class="text-black" style="text-align: center;">
    <h2>Featured Events</h2>
    <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-top: 20px;">
        <div style="flex: 1; margin-right: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
            <h3>Event 1</h3>
            <p>Description of the first featured event.</p>
        </div>

        <div style="flex: 1; margin-left: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
            <h3>Event 2</h3>
            <p>Description of the second featured event.</p>
        </div>
    </div>
</div>

<div class="text-black" style="text-align: center;">
    <h3>Event Calendar</h3>
    <table style="width: 80%; margin: auto; border-collapse: collapse; font-size: 18px; border: 1px solid black;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="padding: 10px; border: 1px solid black;">Date</th>
                <th style="padding: 10px; border: 1px solid black;">Event</th>
                <th style="padding: 10px; border: 1px solid black;">Location</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="padding: 10px; border: 1px solid black;">01/01/2024</td>
                <td style="padding: 10px; border: 1px solid black;">New Year's Party</td>
                <td style="padding: 10px; border: 1px solid black;">Main Hall</td>
            </tr>
            <tr>
                <td style="padding: 10px; border: 1px solid black;">02/14/2024</td>
                <td style="padding: 10px; border: 1px solid black;">Valentine's Gala</td>
                <td style="padding: 10px; border: 1px solid black;">Banquet Room</td>
            </tr>
        </tbody>
    </table>
</div>