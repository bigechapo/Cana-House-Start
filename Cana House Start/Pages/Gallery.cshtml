@page
@model Cana_House_Start.Pages.GalleryModel
@{
    ViewData["Title"] = "Gallery";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('/Images/Cana-Watercolor.JPG') no-repeat center center fixed;
            background-size: cover;
            color: #2C2C2C;
            font-family: 'Playfair Display', serif;
            margin: 0;
            padding: 0;
            position: relative;
        }

        h1 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
            margin-bottom: 20px;
        }

        /* .container { */
        /*     max-width: 90%; */
        /*     margin: auto; */
        /*     padding: 20px; */
        /* } */

        .info-section {
            background-color: #ffffff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            border-left: 5px solid #283F3B;
            font-size: 20px;
            text-align: center;
        }

        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            padding: 20px;
            justify-items: center;
        }

            .gallery img {
                width: 100%;
                max-width: 550px;
                height: auto;
                border-radius: 8px;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease-in-out;
            }

                .gallery img:hover {
                    transform: scale(1.05);
                }

    </style>
</head>
<body>
    <div class="container">
        <div class="info-section">
            <h1>Gallery</h1>
            <div class="gallery">
                <img src="~/images/house.jpg" alt="House">
                <img src="~/images/Mass.jpg" alt="Mass">
                <img src="~/images/MusicImage.jpg" alt="Music">
                <img src="~/images/AddInfo.jpg" alt="Additional Info">
                <img src="~/images/Donation.jpg" alt="Donation">
                <img src="~/images/Cana-Watercolor.jpg" alt="Watercolor">
                <img src="~/images/Events.jpg" alt="Events">
                <img src="~/images/HouseReserve.jpg" alt="House Reserve">
            </div>
        </div>
    </div>
</body>