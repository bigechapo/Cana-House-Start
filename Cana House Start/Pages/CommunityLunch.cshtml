@page
@model Cana_House_Start.Pages.CommunityLunchModel
@{
    ViewData["Title"] = "Community Lunch";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>

        h1 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
            font-size: 36px;
        }

        .event-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: start; /* Ensures both sections align at the top */
            gap: 40px;
            padding: 20px;
        }

        .event-left {
            width: 35%;
            display: flex;
            flex-direction: column;
            align-items: center; /* Centers image and title */
        }

        .event-right {
            width: 60%;
        }

        .event-title {
            font-size: 35px;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
        }

        .event-description {
            font-size: 27px;
            line-height: 1.6;
            text-align: justify;
        }

        .note {
            font-style: italic;
            font-size: 20px;
            color: #555;
            margin-top: 20px;
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
        }

    </style>
</head>

<body>
    <div class="container">
        <div class="event-wrapper">
            <div class="event-left">
                <div class="event-title">Community Lunch</div>
                <img src="~/images/CommunityLunch.jpg">
            </div>
            <div class="event-right">
                <h1>Upcoming Events</h1>
                <p class="event-description">
                    Join us for a special Community Lunch, where neighbors and friends gather to share a meal, connect, and foster a sense of belonging.
                    Enjoy delicious food, great company, and meaningful conversations in a warm and welcoming environment.
                    Whether you’re new to the community or a long-time member, this lunch is a wonderful opportunity to make new friends and deepen connections.
                    <strong>Every third Sunday of the Month</strong>, the house will host these events.
                </p>
                <p class="note">
                    <em>Note: This is a free community event, open to all.</em>
                </p>
            </div>
        </div>
    </div>
</body>
