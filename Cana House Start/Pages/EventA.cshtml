@page
@model Cana_House_Start.Pages.EventA
@{
    ViewData["Title"] = "Event List";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Comfortaa:wght@300;400&display=swap" rel="stylesheet">
    <style>


        .container1 {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            padding: 40px;
            background-color: #F5F1E3;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }


        h1 {
            font-family: 'Playfair Display', serif;
            color: #800020;
            text-align: center;
            font-size: 36px;
        }

        .event-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 40px;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

        .event-left {
            width: 40%;
        }

        .event-right {
            width: 60%;
        }

        .event-title, .event-date, .event-description {
            width: 100%;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-family: 'Comfortaa', sans-serif;
        }

        .event-image {
            width: 100%;
            height: auto;
            object-fit: contain;
            border-radius: 10px;
            margin-top: 10px;
        }

        .event-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #800020;
            border: 2px solid #800020;
            background-color: transparent;
            border-radius: 5px;
            transition: 0.3s;
            cursor: pointer;
            margin-top: 10px;
        }

            .event-button:hover {
                background-color: #800020;
                color: white;
            }
    </style>
</head>

<body>
    <div class="container1">
        <h1>Upcoming Events</h1>
        <div class="event-list">
            @foreach (var eventItem in Model.Events)
            {
                <div class="event-wrapper">
                    <div class="event-left">
                        <h3>@eventItem.Title</h3>
                        <p>@eventItem.Description</p>
                        <p>@eventItem.Date.ToString("MMMM dd, yyyy")</p>
                    </div>
                    <div class="event-right">
                        <img class="event-image" src="data:image/png;base64,@Convert.ToBase64String(eventItem.ImageUrl)" alt="@eventItem.Title" />
                    </div>
                </div>
            }
        </div>
    </div>
</body>